{
	"compilerOptions": {
		"outDir": "./dist/",
		"strict": true,
		"module": "CommonJS",
		"declaration": true,
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
	},
	"include": [
		"./src"
	]
}